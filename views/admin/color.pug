extends ./layout.pug

block pre-include
  - var menu = 'product';
  - var childMenu = 'color';
  title Màu sắc

block post-include
  script(src=staticURI() + '/js/admin/color.js')
  
block content
  section.content-header.clearfix
    ol.breadcrumb.col-sm-8
      li
        a Sản phẩm
      li
        a Màu sắc
  section.content.clearfix
    .col-sm-12.pd-right-0.pd-left-0
      .box
        .box-body
          .form-group.clearfix
            .col-sm-3.col-xs-8
              input.form-control(name="name" placeholder="Tiêu đề")
            .col-sm-1.col-xs-4.pd-0(style="width: 35px;")
              input.form-control(name="hex" type="color" style="width: 34px; padding: 0px;")
            .col-sm-2.col-xs-12
              .btn.btn-primary.btn-add Thêm màu sắc
          - var count = countArr(data);
          if count
            .col-sm-12
              table.table.table-striped.display.nowrap(cellspacing="0" width="100%")
                thead
                  tr
                    th.col-sm-5 Name
                    th.col-sm-5 Mã hex
                    th.col-sm-1 Chỉnh sửa
                tbody
                  each item in data
                    tr
                      td.col-sm-5.name=item.name
                      td.col-sm-5.hex(data-value=item.hex)=item.hex
                        span.bg-color-hex(style='background-color: "'+item.hex+'"')
                      td.col-sm-2
                        a.btn-edit(data-id=item.id, data-name=item.name, data-hex=item.hex title="Chỉnh sửa")
                          i.fa.fa-pencil-square-o
                        a.btn-remove(data-id=item.id title="Xóa")
                          i.fa.fa-trash
        .modal-edit.modal.fade
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') ×
                h4.modal-title Chỉnh sửa
              .modal-body.clearfix
                .form-group.clearfix
                  .col-sm-6
                    input.form-control(name="name" placeholder="Tiêu đề")
                  .col-sm-6
                    input.form-control(name="hex" type="color" style="width:34px;padding:0;")
              .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Đóng
                button.btn.btn-primary.btn-update(type='button') Cập nhật
