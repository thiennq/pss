extends ./layout.pug

block pre-include
  - var menu = 'product';
  - var childMenu = 'material';
  title Chất liệu

block post-include
  script(src=staticURI() + '/js/admin/material.js')
  script.
    var tbl = $("table").DataTable({
      aaSorting: [],
      bDestroy: true,
      responsive: true,
      rowReorder: false,
    });
  
block content
  section.content-header.clearfix
    ol.breadcrumb.col-sm-8
      li
        a Sản phẩm
      li
        a Chất liệu
  section.content.clearfix
    .col-sm-12
      .box
        .box-body
          .form-group.clearfix
            .col-sm-3.col-xs-6
              input.form-control(name="name" placeholder="Chất liệu")
            .col-sm-2.col-xs-6
              .btn.btn-primary.btn-add Thêm chất liệu
          - var count = countArr(data);
          if count
            .col-sm-12
              table.table.table-striped.display.nowrap(cellspacing="0" width="100%")
                thead
                  tr
                    th Chất liệu
                    th Chỉnh sửa
                tbody
                  each item in data
                    tr
                      td.name=item.name
                      td
                        a.btn-edit(data-id=item.id title="Chỉnh sửa")
                          i.fa.fa-pencil-square-o
                        a.btn-remove(data-id=item.id title="Xóa")
                          i.fa.fa-trash
        .modal-edit.modal.fade
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') ×
                h4.modal-title Chỉnh sửa
              .modal-body.clearfix
                .form-group.clearfix
                  .col-sm-6
                    input.form-control(name="name" placeholder="Chất liệu")
              .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Đóng
                button.btn.btn-primary.btn-update(type='button') Cập nhật
