          span Đơn hàng
          i.fa.fa-angle-left.pull-right
        ul.treeview-menu
          - var liClass = (childMenu == 'new' ? 'active' : '');
          li
            a(href='/admin/order?order_status=new' class=liClass)
              | Mới
          - var liClass = (childMenu == 'confirm' ? 'active' : '');
