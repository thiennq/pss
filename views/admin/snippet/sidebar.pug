aside.main-sidebar
  section.sidebar
    ul.sidebar-menu
      li.header
        a.logo-admin(href="/")
          img(src=staticURI() + '/img/eye-logo.png')
      - var itemClass = (menu == 'dashboard' ? 'active' : '');
      li.treeview
