extends ./layout.pug
block pre-include
  - var menu = 'article'
  - var childMenu = 'page'
  title Trang nội dung

block post-include
  script(src=staticURI() + '/js/admin/page.js')

block content
  section.content-header.clearfix
    ol.breadcrumb.col-sm-8.hidden-xs
      li
        a Trang nội dung
    ol.button-right.col-sm-4.col.xs-12
      li
        a.btn.btn-admin(href="/admin/page/new") Thêm mới

  section.content
    .box
      .box-body
        table.table.table-bordered.table-striped.nowrap(cellspacing="0" width="100%")
          thead
            tr
              th Id
              th Tiêu đề
              th Người tạo
              th Ngày cập nhật
              th Hiển thị
              th Chỉnh sửa
          tbody
            each item in data
              tr
                td=item.id
                td
                  a(href="/admin/page/" + item.id target="_blank")=item.title
                td=item.author
                td=item.updated_at
                td
                  if item.display == 1
                    label.label.label-info Có
                  else
                    label.label.label-danger Không
                td
                  a.btn-edit(href="/admin/page/" + item.id, data-id=item.id, title="Chỉnh sửa")
                    i.fa.fa-pencil-square-o
                  a.btn-remove(data-id=item.id, title="Xóa")
                    i.fa.fa-trash
