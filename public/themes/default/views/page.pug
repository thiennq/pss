extends ./layout.pug

block pre-include
  title=page.title
  if page.image
    - ogImage = page.image
  if page.meta_description
    - metaDescription = page.meta_description
  if page.meta_robots
    - meta_robots = page.meta_robots;
  - metaTitle = page.title
block post-include
  script(src=themeURI() + '/libs/twbsPagination.min.js')
  link(rel='stylesheet', href=themeURI() + '/libs/owl.carousel.min.css')
  script(src=themeURI() + '/libs/owl.carousel.min.js')
  
block content
  .news-detail.container
    include snippet/breadcrumb
    .col-xs-12
      .content.page.row
        h1.title=page.title
        p.description
          b=page.description
        section !{page.content}
