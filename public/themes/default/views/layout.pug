doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="format-detection" content="telephone=no")
    - var metaTitle = getMeta('meta_title_default');
    - var metaDescription = getMeta('meta_description_default');
    - var title = metaTitle;
    - var ogType = "website";
    - var host = 'https://' + $_SERVER['HTTP_HOST'];
    - var ogUrl = currentHost() + currentUrl();
    - var ogImage = '/uploads/' + getMeta('facebook_image');
    - var ogImageWidth = '500';
    - var ogImageHeight = '500';
    - var meta_robots = 'index, follow';
    - var env = currentENV();
    if env == 'development'
      link(rel="stylesheet", href=themeURI() + '/css/style.css')
    else
      include snippet/style.min.css.pug
    link(rel="icon" href= themeURI() + "/img/favicon.ico")
    link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700,900&amp;subset=vietnamese" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Roboto:100,400,500,700,900&amp;subset=vietnamese" rel="stylesheet")
    link(rel='stylesheet', href=staticURI() + '/libs/toastr.min.css')
    block pre-include
    title=title  
    meta(name="robots" content=meta_robots)
    meta(property="og:type" content=ogType)
    meta(property="og:title" content=metaTitle)
    meta(property="og:description" content=metaDescription)
    meta(name="description" content=metaDescription)
    meta(property="og:url" content=ogUrl)
    meta(property="og:image" content=ogImage)
  body
    include snippet/header
    .main-wrapper.clearfix
      block content
    include snippet/footer
    include snippet/modal-order
    !{getMeta('facebook_pixel')}
    script(src=themeURI() + '/libs/jquery.min.js')
    script(src=staticURI() + '/libs/toastr.min.js')
    script(src=themeURI() + '/libs/tmpl.min.js')
    script(src=themeURI() + '/libs/bootstrap.min.js')
    script(src=themeURI() + '/libs/jquery.unveil.min.js')
    link(rel="stylesheet" href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    block post-include
    script(src=themeURI() + '/js/script.js')
    
