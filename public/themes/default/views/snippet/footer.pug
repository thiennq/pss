          .col-xs-12.receive-info
            | NHẬN THÔNG TIN KHUYẾN MÃI
          input.form-control.col-xs-7(placeholder="Nhập email" name="email_subscribe", required, type="email")
          button(type="submit").btn-subscribe Đăng ký
  .col-sm-12.menu-policy
    .container
      -var policy = policy();
      !{policy}
  .col-sm-12.hidden-xs.top-brands
    .container
      .row
        .col-sm-12.top-brands-title
          .title
            | TOP BRAND
        .col-sm-12
          .brands
            - var brands = Brand();
            each item in brands
              ul
                each i in item
                  li
                    a(href=fullUrl("thuong-hieu/" + i.handle))=i.name
  .col-sm-12.branchs
    .container
      - var branchs = branchs();
      !{branchs}
  .col-sm-12.copyright.clearfix.col-xs-12
    .container
      span Copyright @2017-2018 
      span.orange Mia.vn 
      span All rights reserved.
