footer
  .col-sm-12.hotline-n-subscribe
    .container
      .row
        .hotlines
          .col-sm-4.col-xs-6.hotline(style="background:url('/uploads/" + banner_shopping_footer() + "')")
          .col-sm-4.col-xs-6.hotline(style="background:url('/uploads/" + banner_complain_footer() + "')")
